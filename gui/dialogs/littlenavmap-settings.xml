<?xml version="1.0"?>

<PropertyList>
    <name>littlenavmap-settings</name>
    <layout>vbox</layout>
    <width>330</width>
    <group>
        <layout>hbox</layout>

        <button>
            <legend> </legend>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>

        <empty>
            <stretch>1</stretch>
        </empty>

        <text>
            <label>LittleNavMap options</label>
        </text>

        <empty>
            <stretch>1</stretch>
        </empty>

        <button>
            <legend> </legend>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>

    </group>

    <hrule/>

    <checkbox>
		<halign>left</halign>
		<label>Enable export</label>
		<property>/addons/by-id/com.slawekmikula.flightgear.LittleNavMap/enabled</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

    <group>
        <layout>hbox</layout>

        <text>
            <label>Refresh rate:</label>
        </text>

        <input>
            <name>refresh-rate</name>
            <height>25</height>
            <property>/addons/by-id/com.slawekmikula.flightgear.LittleNavMap/refresh-rate</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </input>
    </group>

    <group>
        <layout>hbox</layout>

        <text>
            <label>UDP host:</label>
        </text>

        <input>
            <name>udp-host</name>
            <height>25</height>
            <property>/addons/by-id/com.slawekmikula.flightgear.LittleNavMap/udp-host</property>
            <binding>
                <command>dialog-apply</command>
                <object-name>udp-host</object-name>
            </binding>
        </input>
    </group>

    <group>
        <layout>hbox</layout>

        <text>
            <label>UDP port:</label>
        </text>

        <input>
            <name>udp-port</name>
            <height>25</height>
            <property>/addons/by-id/com.slawekmikula.flightgear.LittleNavMap/udp-port</property>
            <binding>
                <command>dialog-apply</command>
                <object-name>udp-port</object-name>
            </binding>
        </input>
    </group>
    
    <hrule/>

    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        <button>
            <legend>Save</legend>
            <pref-width>90</pref-width>
            <pref-height>30</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </button>

        <button>
            <legend>Close</legend>
            <pref-width>90</pref-width>
            <pref-height>30</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
        <empty>
            <stretch>1</stretch>
        </empty>
    </group>
</PropertyList>
