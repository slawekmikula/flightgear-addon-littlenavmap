<?xml version="1.0"?>

<PropertyList>
	<name>littlenavmap-settings</name>
	<layout>vbox</layout>
	<width>330</width>
	<group>
		<layout>hbox</layout>

		<button>
			<legend> </legend>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

		<empty><stretch>1</stretch></empty>

		<text>
			<label>LittleNavMap options</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<legend> </legend>
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

	</group>

	<hrule/>

	<checkbox>
		<halign>left</halign>
		<label>Enable LinuxTrack</label>
		<property>/sim/linuxtrack/enabled</property>
		<live>true</live>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<halign>left</halign>
		<label>Track ALL</label>
		<property>/sim/linuxtrack/track-all</property>
		<live>true</live>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<halign>left</halign>
		<label>Track X Axis</label>
		<property>/sim/linuxtrack/track-x</property>
		<live>true</live>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<halign>left</halign>
		<label>Track Y Axis</label>
		<property>/sim/linuxtrack/track-y</property>
		<live>true</live>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<checkbox>
		<halign>left</halign>
		<label>Track Z Axis</label>
		<property>/sim/linuxtrack/track-z</property>
		<live>true</live>
		<binding>
			<command>dialog-apply</command>
		</binding>
	</checkbox>

	<hrule/>

	<group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>
		<button>
			<legend>Save</legend>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>

		<button>
			<legend>Close</legend>
			<pref-width>90</pref-width>
			<pref-height>30</pref-height>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		<empty><stretch>1</stretch></empty>
	</group>
</PropertyList>
